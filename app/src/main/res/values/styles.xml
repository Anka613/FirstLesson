<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCoolStyle">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/ginger</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">bold</item>
        <item name="colorAccent">@color/ginger</item>
    </style>

    <style name="MyDarkStyle">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="colorOnPrimary">@android:color/holo_orange_light</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="colorPrimaryDark">@android:color/holo_orange_light</item>
        <item name="colorAccent">#595959</item>
    </style>

    <style name="MyLightStyle">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="actionBarTheme">@color/textColorPrimary_light</item>
        <item name="android:textStyle">bold</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorAccent">@color/blue</item>
    </style>
</resources>